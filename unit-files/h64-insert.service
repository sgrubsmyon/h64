[Unit]
Description=H64 - insert data received via MQTT (mostly from Home Assistant) into DB
After=network-online.target
After=postgresql.service

[Service]
User=yourusername
Group=yourusername
ExecStartPre=/usr/bin/pg_isready -h localhost -p 5432
ExecStart=/home/yourusername/h64/insert_data_into_db.sh
StandardOutput=file:/var/log/h64/insert_data_into_db
StandardError=file:/var/log/h64/insert_data_into_db
Restart=always
RestartSec=30s

[Install]
WantedBy=multi-user.target