[Unit]
Description=Unit file for running h64 family home data collection tools - inverter WebSocket server

[Service]
User=yourusername
Group=yourusername
ExecStart=/usr/bin/python3 /home/yourusername/h64/inverter/inverter_websocket_server.py &> /var/log/h64/inverter_websocket_server
Restart=on-failure

[Install]
WantedBy=multi-user.target
